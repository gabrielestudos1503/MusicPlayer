<!DOCTYPE html>
<html lang="pt_br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Catálogo Musical</title>
    <link rel="stylesheet" href="/css/detalhesArtista.css">
</head>
<body>
    <header>
        <a href="/">
            <img src="/images/logo.png" alt="Logo do Catálogo Musical">
        </a>
        <h1>Detalhes do Artista</h1>
        <img id="back-button" src="/images/back.png" alt="Voltar" class="btn-back" onclick="window.location.href = '/artistas';">
    </header>
    <main>
        <div class="details-container">
            <div class="info-box">
                <h2>Informações Gerais</h2>
                <p><strong>Nome:</strong> <%= artista.nome %></p>
                <p><strong>Gêneros:</strong>
                    <% if (artista.generos && artista.generos.length > 0) { %>
                        <%= artista.generos.map(genero => genero.nome).join(', ') %>
                    <% } else { %>
                        Não especificado
                    <% } %>
                </p>
                <p><strong>Número de Discos:</strong> <%= artista.discos.length %></p>
            </div>

            <div class="discos-box">
                <h2>Discos Associados</h2>
                <% if (artista.discos && artista.discos.length > 0) { %>
                    <ul>
                        <% artista.discos.forEach(disco => { %>
                            <li>
                                <a href="/discos/<%= disco.id %>">
                                    <%= disco.titulo %>
                                </a>
                            </li>
                        <% }) %>
                    </ul>
                <% } else { %>
                    <p>Nenhum disco associado.</p>
                <% } %>

                <div class="buttons">
                    <a href="/artistas/<%= artista.id %>/edit" class="btn editar">Editar</a>
                    <form action="/artistas/<%= artista.id %>/delete" method="POST" style="display:inline;">
                        <button type="submit" class="btn excluir">Excluir</button>
                    </form>
                </div>
            </div>
        </div>
    </main> 
</body>
</html>