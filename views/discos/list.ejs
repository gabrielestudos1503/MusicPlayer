<h2>Lista de Álbuns</h2>
<a href="/discos/create"><button>Criar Novo Álbum</button></a>
<table>
    <thead>
        <tr>
            <th>Título</th>
            <th>Artista</th>
            <th>Gênero</th>
            <th>Ano</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        <% discos.forEach(disco => { %>
        <tr>
            <td><%= disco.titulo %></td>
            <td><%= disco.Artista?.nome || 'N/A' %></td>
            <td><%= disco.Genero?.nome || 'N/A' %></td>
            <td><%= disco.dataLanc %></td>
            <td>
                <a href="/discos/<%= disco.id %>">Ver</a>
                <a href="/discos/<%= disco.id %>/edit">Editar</a>
                <form id="delete-form-<%= disco.id %>" action="/discos/<%= disco.id %>/delete" method="POST" style="display:inline;">
                    <button type="button" onclick="confirmDelete('disco', <%= disco.id %>)">Excluir</button>
                </form>
            </td>
        </tr>
        <% }); %>
    </tbody>
</table>