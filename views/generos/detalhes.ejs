<!DOCTYPE html>
<html lang="pt_br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Catálogo Musical</title>
    <link rel="stylesheet" href="/css/detalhesGenero.css">
</head>
<body>
    <header>
        <a href="/">
            <img src="/images/logo.png" alt="Logo do Catálogo Musical">
        </a>
        <h1>Detalhes do Gênero</h1>
        <img id="back-button" src="/images/back.png" alt="Voltar" class="btn-back" onclick="window.location.href = '/generos';">

    </header>
    <main>
        <section id="genero-info">
            <div class="genero-header">
                <h2><%= genero.nome %></h2>
                <div class="actions">
                    <a href="/generos/<%= genero.id %>/edit" class="btn editar">Editar</a>
                    <form action="/generos/<%= genero.id %>/delete" method="POST" style="display: inline;">
                        <button type="submit" class="btn excluir">Excluir</button>
                    </form>
                </div>
            </div>
        </section>
        <section id="details">
            <div class="left-box">
                <h3>Artistas Associados</h3>
                <% if (genero.artistas && genero.artistas.length > 0) { %>
                    <ul>
                        <% genero.artistas.forEach(artista => { %>
                            <li><%= artista.nome %></li>
                        <% }) %>
                    </ul>
                <% } else { %>
                    <p>Nenhum artista associado.</p>
                <% } %>
            </div>
            <div class="right-box">
                <h3>Discos Associados</h3>
                <% if (genero.discos && genero.discos.length > 0) { %>
                    <ul>
                        <% genero.discos.forEach(disco => { %>
                            <li><%= disco.titulo %> (<%= disco.data %>)</li>
                        <% }) %>
                    </ul>
                <% } else { %>
                    <p>Nenhum disco associado.</p>
                <% } %>
            </div>
        </section>
    </main> 
</body>
</html>